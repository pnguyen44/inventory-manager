<h1>Add Item</h1>
<form {{action "createItem" on="submit"}}>
  <label>Item Name</label>
  {{input
    placeholder='Name: Required'
    value=newItem.name}}
  <label>Description</label>
  {{input
      placeholder='Description'
      value=newItem.description}}
  <label>Current Quantity</label>
  {{input
      type='number'
      min=1
      placeholder='Current quantity, must be a number'
      value=newItem.currentQuantity}}
  <label>Alert Quantity</label>
  {{input
      type='number'
      min=1
      placeholder='Alert quantity, must be a number'
      value=newItem.alertQuantity}}
  <button type='submit'>Save</button>
</form>
