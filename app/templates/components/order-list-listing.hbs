                <th class='th-view-btn'><{{remove-from-order-list item=item category= category removeFromOrderList='removeFromOrderList'}}</th>
              {{!-- {{/if}} --}}
            </tr>
          {{/if}}
        {{/each}}
      {{!-- </tbody>
    </table> --}}
  {{/if}}
  </tbody>
</table>
