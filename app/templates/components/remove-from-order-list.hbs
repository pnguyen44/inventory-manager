<!-- Button trigger modal -->
 <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#remove-from-order-list-form{{item.id}}">
Remove
 </button>

<!-- Modal -->
<div class="modal fade" id="remove-from-order-list-form{{item.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Remove From Order List Item: {{item.name}} Category: {{category.name}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class='message'>{{message}}</div>
        <form  {{action 'editRequestedQty' item on='submit'}}>
            <p>Are you sure you want to remove this item from order list?</p>
          <div class="modal-footer">
            <button type="submit" {{action 'removeFromOrderList' item}} class="btn btn-primary">Remove</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
