{{#if category.hasRunningLowItems}}
  <table class="table table-category table-responsive table-striped">
    <thead class='thead-inverse'>
      <tr>
        <th class='th-name th-category-name tb-header'>
          {{category.name}} ({{category.runningLowItemsCount}})
        </th>
        <th class='th-des-running-low tb-header'></th>
        <th class='th-btn tb-header'></th>
        <th class='th-btn tb-header'></th>
        <th class='th-btn tb-header'></th>
        {{!-- <th class='th-quant'><button type='button' {{action 'toggleItemTable' category}}>{{buttonName}}</button></th> --}}
        {{#unless hide}}
          {{#if category.items.length}}
            <th class='th-cart-info tb-header'><button class='btn btn-primary btn-xs' type='button' {{action 'toggleItemTable' category}}>{{buttonName}}</button></th>
          {{else}}
            <th class='th-cart-info tb-header'></th>
          {{/if}}
        {{/unless}}

      </tr>
    {{!-- </thead>
    <tbody>
    </tbody>
  </table> --}}
</thead>
<tbody>

  {{#if isShowingTable}}
    {{!-- <table class="table table-striped table-item">
      <thead class='thead-inverse item-table-header'> --}}
        <tr>
          <th class='th-name tb-field'>Name</th>
          <th class='th-des-running-low tb-field'>Description</th>
          <th class='th-quant tb-field'>Current Quantity</th>
          <th class='th-btn tb-field'>Alert Quantity</th>
          <th class='th-btn tb-field'>Requested Quantity</th>
          <th class='th-btn tb-field'></th>
          {{!-- <th class='th-btn'></th> --}}
        </tr>
      {{!-- </thead>
      <tbody> --}}
        {{#each category.items as |item|}}
          {{#if item.isLow}}
            <tr>
              <th>{{item.name}}</th>
              <th>{{item.description}}</th>
              <th>{{item.currentQuantity}}</th>
              <th>{{item.alertQuantity}}</th>
              <th>{{item.quantityPurchased}}</th>
              {{!-- <th>{{delete-item-button-confirm item=item deleteItem='deleteItem'}}</th> --}}
              {{#if item.inOrderList}}
                <th class='th-cart-info'>{{#link-to "order-list"}}In Order List{{/link-to}}</th>
              {{else}}
                <th class='th-cart-info'><{{add-to-order-list-form item=item addToOrderList='addToOrderList'}}</th>
              {{/if}}
            </tr>
          {{/if}}
        {{/each}}
      {{!-- </tbody>
    </table> --}}
  {{/if}}
</tbody>
</table>

{{/if}}

