<!-- Button trigger modal -->

 <button {{action "setCurrentItem" }} type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#edit-item-form-{{item.id}}">
  Edit
 </button>

<!-- Modal -->
<div class="modal fade" id="edit-item-form-{{item.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Item In Category: {{category.name}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          {{!-- <span aria-hidden="true">&times;</span> --}}
        </button>
      </div>
      <div class="modal-body">
        <div class='message'>{{message}}</div>
        <form {{action "editItem" on="submit"}}>
          <label>Item Name</label>
          {{input
            value=updatedName}}
          <label>Description</label>
          {{input
              value=updatedDescription}}
          <label>Current Quantity</label>
          {{input
              type='number'
              min=0
              value=updatedCurrentQuantity}}
          <label>Alert Quantity</label>
          {{input
              type='number'
              min=0
              value=updatedAlertQuantity}}
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
