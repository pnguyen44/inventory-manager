<!-- Button trigger modal -->
 <button type="button" class="btn btn-success" data-toggle="modal" data-target="#category-form">
  Add Category
 </button>

<!-- Modal -->
<div class="modal fade" id="category-form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          {{!-- <span aria-hidden="true">&times;</span> --}}
        </button>
      </div>
      <div class="modal-body">
        <div class="message">{{message}}</div>
        <br>
        <form {{action "createCategory" on="submit"}}>
          <label>New Category</label> {{input
            placeholder='Name: Requred'
            value=newCategoryToAdd.name}}
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Add</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
